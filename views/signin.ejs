<div class="centerOne">
    <div class="row">
        <div class="col s12 m4">
            <div class='card  white'>
                <div class="card-content indigo-text ">
                    <center><span class="card-title">
                            <h4>Sign In</h4>
                        </span></center>
                    <form action='/signin/signin' method='post'>
                        <div class="red-text">
                            <center> <%= typeof msg != 'undefined' ? msg : '' %></center>
                        </div>
                        <div class="green-text">
                            <center> <%= typeof password != 'undefined' ? password : '' %></center>
                        </div>
                        <div class="input-field">
                            <i class="material-icons prefix">email</i>
                            <input type="email" id="email" name="email" required>
                            <label for="email">Your Email</label>
                        </div>
                        <div class="input-field">
                            <i class="material-icons prefix">lock</i>
                            <input type="password" id="pass" name="pass" required>
                            <label for="pass">Your Password</label>

                            <a href="/user/forget">
                                <div class="red-text">Forgot Password?</div>
                            </a>



                            <div class="input-field center">
                                <button class="btn indigo darken-4">Submit</button>
                            </div>
                    </form>
                    <div class="input-field center">New user?
                        <a href="/user/signup">Sign Up</div></a>
                </div>

            </div>
        </div>
    </div>
</div>
</div>