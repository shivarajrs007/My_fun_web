<div class="container">
    <div class="row">
        <div class="col s12 m6">
            <div class='card  white'>
                <div class="card-content indigo-text bold-text">
                    <center><span class="card-title">
                            <h4>Forget Password</h4>
                        </span></center>
                    <form action='/forget/forget' method='post'>
                        <div class="red-text">
                            <center> <%= typeof msg != 'undefined' ? msg : '' %></center>
                        </div>
                        <div class="input-field">
                            <i class="material-icons prefix">email</i>
                            <input type="email" id="email" name="email" required>
                            <label for="email">Your Email</label>
                        </div>

                        <div class="input-field">
                            <i class="material-icons prefix">date_range</i>
                            <input type="text" id="date" name=date class="datepicker">
                            <label for="date">Joining Date</label>
                        </div>

                        <div class="input-field center">
                            <button class="btn indigo darken-4">Submit</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>